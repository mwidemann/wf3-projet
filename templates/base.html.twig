        {% block body %}{% endblock %}

        <footer class="container-fluid">
            <div class="row text-center p-5">
                <div class="col-4">
                    <h3>Plan du site</h5>
                    <ul>
                        <li class="my-3"><a href="#">Accueil</a></li>
                        <li class="my-3"><a href="#">Restaurant</a></li>
