{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<style>
    section
    {
        min-height: 100vh;
        position: relative;
        top: 20vh;
    }
</style>

<div id="landingpage" class="d-flex justify-content-center for-scrollify">
